<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của TextView -->
    <solid android:color="#FFFFFF" />

    <!-- Độ rộng và màu của border -->
    <stroke
        android:width="1dp"
        android:color="#a6a6a6" /> <!-- Thay đổi màu sắc theo ý muốn -->

    <!-- Góc bo tròn của border (nếu cần) -->
    <corners android:radius="10dp" /> <!-- Thay đổi độ cong theo ý muốn -->

</shape>
